<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.connexus.yzhao.connexus" >

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main"
            android:label="Main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewAllStreams"
            android:label="ViewAllStreams"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ViewNearbyStreams"
            android:label="ViewNearbyStreams"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ViewSingleStreams"
            android:label="ViewSingleStreams"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Uploader"
            android:label="@string/title_activity_uploader"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SearchResult"
            android:label="SearchResult"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Camera"
            android:label="Camera"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MySubscribedStreams"
            android:label="MySubscribedStreams"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>

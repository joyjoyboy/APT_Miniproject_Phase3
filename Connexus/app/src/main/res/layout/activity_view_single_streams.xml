<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <GridView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridView"
        android:numColumns="4"
        android:layout_below="@+id/header" />

    <Button android:text="More Pictures" android:id="@+id/morePictures"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@+id/uploadImage"
        android:background="@android:color/holo_blue_bright"
        android:layout_weight="1" />
    <Button android:text="Upload an Image" android:id="@+id/uploadImage"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_above="@+id/streams"

        android:layout_weight="1" />
    <Button android:text="Streams" android:id="@+id/streams"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_above="@+id/bottomSpace"
        android:layout_weight="1" />
    <Space android:id="@+id/bottomSpace"
        android:layout_height="10px"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
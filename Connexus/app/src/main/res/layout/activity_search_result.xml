<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.connexus.yzhao.connexus.SearchResult">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="Find Streams:">
    </EditText>

    <Button
        android:id="@+id/search"
        android:text="Search"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/editText" />

    <TextView
        android:text=""
        android:id="@+id/numResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search"/>

    <GridView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridView"
        android:numColumns="4"
        android:layout_below="@+id/numResults" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/paddingSpace"
        android:layout_below="@id/numResults" />

    <Button
        android:id="@+id/moreRes"
        android:text="More search results"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/paddingSpace" />

    <Button
        android:id="@+id/streams"
        android:text="Streams"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/moreRes" />

</RelativeLayout>
